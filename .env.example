PORT=3000
NODE_ENV=development

# Embeddings via local Ollama
EMBEDDINGS_PROVIDER=ollama
EMBEDDINGS_BASE_URL=http://localhost:11434
EMBEDDINGS_MODEL=nomic-embed-text

# Search behavior
# Default minimum score threshold for search results (0-1)
SEARCH_MIN_SCORE=0.5

# Performance tuning
EMBEDDINGS_CONCURRENCY=4
CHUNK_CHARS=800
CHUNK_OVERLAP=120

# MMR re-ranking
MMR_LAMBDA=0.5
MMR_POOL_BASE=8
MMR_POOL_MIN=50

# Sentence tokenizer: 'regex' or 'smart'
SENT_TOKENIZER=regex

